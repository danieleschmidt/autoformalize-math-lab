# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# TOML files
[*.toml]
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# JavaScript/TypeScript files
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_style = space
indent_size = 2

# CSS/SCSS files
[*.{css,scss}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# LaTeX files
[*.{tex,cls,sty,bib}]
indent_style = space
indent_size = 2
max_line_length = 80

# Lean 4 files
[*.lean]
indent_style = space
indent_size = 2
max_line_length = 100

# Isabelle/HOL files
[*.thy]
indent_style = space
indent_size = 2
max_line_length = 80

# Coq files
[*.v]
indent_style = space
indent_size = 2
max_line_length = 80

# Agda files
[*.agda]
indent_style = space
indent_size = 2
max_line_length = 80

# Makefile
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# Batch files
[*.{bat,cmd}]
indent_style = space
indent_size = 2
end_of_line = crlf

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Configuration files
[*.{ini,cfg,conf}]
indent_style = space
indent_size = 4

# Docker files
[{Dockerfile,*.dockerfile}]
indent_style = space
indent_size = 2

# GitHub workflows
[.github/workflows/*.{yml,yaml}]
indent_style = space
indent_size = 2

# Requirements and lock files
[{requirements*.txt,Pipfile,Pipfile.lock,poetry.lock}]
indent_style = space
indent_size = 4

# License and legal files
[{LICENSE,COPYING,COPYRIGHT}]
indent_style = space
indent_size = 2

# Ignore some files
[*.{diff,patch}]
trim_trailing_whitespace = false

# Binary files (no formatting)
[*.{png,jpg,jpeg,gif,ico,svg,pdf,zip,tar,gz,bz2,7z}]
insert_final_newline = false
trim_trailing_whitespace = false