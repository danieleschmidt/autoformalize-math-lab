# Autoformalize Math Lab Environment Configuration
# Copy this file to .env and configure your settings

# Environment
AUTOFORMALIZE_ENV=development
AUTOFORMALIZE_DEBUG=true
AUTOFORMALIZE_LOG_LEVEL=INFO

# API Keys for LLM Services
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# Database Configuration
DATABASE_URL=postgresql://autoformalize:password@localhost:5432/autoformalize_dev
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration (for caching and task queues)
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Proof Assistant Paths (auto-detected if not specified)
LEAN4_PATH=/opt/lean4/bin/lean
ISABELLE_PATH=/opt/isabelle/bin/isabelle
COQ_PATH=/opt/coq/bin/coqc
AGDA_PATH=/opt/agda/bin/agda

# Processing Configuration
MAX_CORRECTION_ROUNDS=5
PROOF_TIMEOUT_SECONDS=60
BATCH_SIZE=10
MAX_WORKERS=4

# Security Configuration
SECRET_KEY=your_secret_key_here_minimum_32_characters
JWT_SECRET_KEY=your_jwt_secret_key_here
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Monitoring and Observability  
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_PORT=9000
METRICS_ENABLED=true

# Storage Configuration
UPLOAD_DIRECTORY=./uploads
MAX_UPLOAD_SIZE_MB=100
TEMP_DIRECTORY=./tmp

# Third-party Integrations
ARXIV_API_BASE=https://export.arxiv.org/api/query
MATHLIB_PATH=/opt/mathlib4
MATHLIB_CACHE_PATH=./cache/mathlib

# Development Settings
RELOAD_ON_CHANGE=true
PRETTY_PRINT_JSON=true
ENABLE_PROFILING=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://autoformalize:password@localhost:5432/autoformalize_test
TEST_REDIS_URL=redis://localhost:6379/1
RUN_SLOW_TESTS=false
RUN_LLM_TESTS=false

# Docker Configuration (for containerized development)
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Performance Tuning
UVICORN_WORKERS=1
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_CROSS_SYSTEM_TRANSLATION=true
ENABLE_REALTIME_PROCESSING=false
ENABLE_BATCH_PROCESSING=true

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
LLM_API_RATE_LIMIT_PER_MINUTE=10
CONCURRENT_PROOF_LIMIT=5

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,zh,ja

# Backup and Recovery
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
EOF < /dev/null
